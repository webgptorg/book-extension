{
    "name": "Book Markdown",
    "scopeName": "text.book.markdown",
    "fileTypes": ["book", "book.md"],
    "patterns": [
        {
            "include": "#blocks"
        }
    ],
    "repository": {
        "blocks": {
            "patterns": [
                {
                    "include": "#headers"
                },
                {
                    "include": "#blockquotes"
                },
                {
                    "include": "#codeblocks"
                },
                {
                    "include": "#tables"
                },
                {
                    "include": "#inline"
                },
                {
                    "include": "#lists"
                }
            ]
        },
        "headers": {
            "patterns": [
                {
                    "name": "heading.1.markdown",
                    "match": "^(#{1})\\s+(.*)$",
                    "captures": {
                        "1": {
                            "name": "punctuation.definition.heading.markdown"
                        },
                        "2": {
                            "name": "entity.name.section.markdown"
                        }
                    }
                },
                {
                    "name": "heading.2.markdown",
                    "match": "^(#{2})\\s+(.*)$",
                    "captures": {
                        "1": {
                            "name": "punctuation.definition.heading.markdown"
                        },
                        "2": {
                            "name": "entity.name.section.markdown"
                        }
                    }
                }
            ]
        },
        "inline": {
            "patterns": [
                {
                    "name": "markup.bold.markdown",
                    "match": "\\*\\*([^\\*]+)\\*\\*",
                    "captures": {
                        "1": {
                            "name": "markup.bold.markdown"
                        }
                    }
                },
                {
                    "name": "markup.italic.markdown",
                    "match": "\\*([^\\*]+)\\*",
                    "captures": {
                        "1": {
                            "name": "markup.italic.markdown"
                        }
                    }
                },
                {
                    "name": "markup.inline.raw.string.markdown",
                    "match": "`([^`]+)`",
                    "captures": {
                        "1": {
                            "name": "markup.inline.raw.string.markdown"
                        }
                    }
                },
                {
                    "name": "markup.underline.link.markdown",
                    "match": "\\[([^\\]]+)\\]\\(([^\\)]+)\\)",
                    "captures": {
                        "1": {
                            "name": "string.other.link.title.markdown"
                        },
                        "2": {
                            "name": "markup.underline.link.markdown"
                        }
                    }
                }
            ]
        },
        "lists": {
            "patterns": [
                {
                    "name": "markup.list.unnumbered.markdown",
                    "match": "^\\s*([-*+])\\s+(.*)$",
                    "captures": {
                        "1": {
                            "name": "punctuation.definition.list.markdown"
                        },
                        "2": {
                            "name": "markup.list.item.markdown"
                        }
                    }
                },
                {
                    "name": "markup.list.numbered.markdown",
                    "match": "^\\s*(\\d+\\.)\\s+(.*)$",
                    "captures": {
                        "1": {
                            "name": "punctuation.definition.list.markdown"
                        },
                        "2": {
                            "name": "markup.list.item.markdown"
                        }
                    }
                }
            ]
        },
        "blockquotes": {
            "name": "markup.quote.markdown",
            "begin": "^\\s*>\\s+",
            "end": "$",
            "patterns": [
                {
                    "include": "#inline"
                }
            ]
        },
        "codeblocks": {
            "name": "markup.fenced_code.block.markdown",
            "begin": "^\\s*(`{3,}|~{3,}).*$",
            "end": "^\\s*\\1\\s*$",
            "patterns": [
                {
                    "include": "source.any"
                }
            ]
        },
        "tables": {
            "patterns": [
                {
                    "name": "markup.table.markdown",
                    "match": "^\\|(.+)\\|$",
                    "captures": {
                        "1": {
                            "patterns": [
                                {
                                    "match": "[^|]+",
                                    "name": "markup.table.cell.markdown"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "markup.table.delimiter.markdown",
                    "match": "^\\|\\s*([-:]+[-| :]*?)\\s*\\|$"
                }
            ]
        }
    }
}